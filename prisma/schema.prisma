generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String           @id @default(cuid())
  name       String?
  username   String?          @unique
  email      String?          @unique
  image      String?
  bio        String?
  lokasi     String?
  linkWhatsapp String?
  updates    FarmingUpdate[]
  hasilTanam HasilTanam[]
  createdAt  DateTime         @default(now())
}

model FarmingUpdate {
  id         String   @id @default(cuid())
  deskripsi  String
  fotoUrl    String   
  createdAt  DateTime @default(now())
  petani     User     @relation(fields: [petaniId], references: [id])
  petaniId   String
}

model HasilTanam {
  id         String   @id @default(cuid())
  deskripsi  String
  fotoUrl    String
  tanggalPanen DateTime
  jenisTanam String
  jumlahKg   Int
  petani User @relation(fields: [petaniId], references: [id])
  petaniId   String
  createdAt  DateTime @default(now())
}


